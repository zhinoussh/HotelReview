@model HotelAdvice.ViewModels.CityViewModel

@{
    Layout = null;
}


@using (Ajax.BeginForm("ADD_New_City", "City", new AjaxOptions
{
    HttpMethod = "Post"
    ,
    OnSuccess = "Success_AjaxReturn"
    ,
    InsertionMode = InsertionMode.ReplaceWith
}))
{
    @Html.AntiForgeryToken()

    <div class="modal fade modal_main" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header modal-header-add">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">
                        <span class="glyphicon glyphicon-pencil"></span> Add / Edit City
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.cityName, new { @placeholder = "City Name", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.cityName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.TextAreaFor(model => model.cityAttractions, new { @placeholder = "Tourist Attractions", @class = "form-control", style = "min-height:300px" })
                        @Html.ValidationMessageFor(m => m.cityAttractions, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="modal-footer ">

                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-ok-circle"></span>Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove-circle"></span>Cancel</button>

                </div>

            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    @Html.HiddenFor(model => model.cityID, new { id = "hd_city_id" })

    @Html.HiddenFor(model => model.CurrentPage)
    @Html.HiddenFor(model => model.CurrentFilter)
}
