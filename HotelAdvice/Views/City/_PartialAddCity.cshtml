@model HotelAdvice.ViewModels.CityViewModel

@{
    Layout = null;
}

<div class="modal-header modal-header-add">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
    <h4 class="modal-title custom_align" id="Heading">Edit Your Detail</h4>
</div>
<div class="modal-body">
    <div class="form-group">
        <input class="form-control " type="text" placeholder="City Name">
    </div>
   
    <div class="form-group">
        <textarea rows="2" class="form-control" placeholder="Tourist Attractions"></textarea>
    </div>
</div>
<div class="modal-footer ">
    <button type="button" class="btn btn-primary" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Save</button>
    <button type="button" class="btn btn-primary" style="width: 100%;"><span class="glyphicon glyphicon-remove-sign"></span >Cancel</button>
</div>
