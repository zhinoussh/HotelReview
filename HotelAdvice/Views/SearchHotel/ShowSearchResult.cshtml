
@model HotelAdvice.ViewModels.SearchPageViewModel

@{
    ViewBag.Title = "Search Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- search bar -->
<div id="searchbar" class="well" style="margin-top:5%" >
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-9 col-sm-offset-1 nopadding_right">
                @Html.TextBoxFor(model => model.Destination_Name, new { @class = "form-control focus", @placeholder = "Find Hotel, City or Destination...", id = "txt_dest_name" })
            </div>
            <div class="col-sm-2 nopadding_left">
                <button type="submit" class="btn btn_search"><i class="glyphicon glyphicon-search"></i>&nbsp;Search</button>
            </div>
        </div>
    </div>
</div>
<!-- end search bar -->


@*Advanced Search*@
<div class="col-sm-3 nopadding">
    @{Html.RenderPartial("_PartialAdvancedSearch", Model.Advnaced_Search);}
</div>
@*End of Advanced Search*@

@*Results*@
<div class="col-sm-9">
    <h4>@Model.city_name</h4>

    <div id="table_container" class="col-sm-12">
        @{Html.RenderPartial("_PartialHotelListResults", Model.paged_list_hotels);}
    </div>
</div>
@*END Results*@



