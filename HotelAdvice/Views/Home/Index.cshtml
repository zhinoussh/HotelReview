@model HotelAdvice.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section ContentBody{


 <!-- slider -->
<section id="home">
    <div id="fullscreenslider" class="carousel slide" data-ride="carousel" >
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#fullscreenslider" data-slide-to="0" class="active"></li>
            <li data-target="#fullscreenslider" data-slide-to="1"></li>
            <li data-target="#fullscreenslider" data-slide-to="2"></li>
        </ol>
       
        <!-- Controls -->
        <a class="left carousel-control" href="#fullscreenslider" data-slide="prev">
            <span class="fa fa-chevron-circle-left fa-2x"></span>
        </a>
        <a class="right carousel-control" href="#fullscreenslider" data-slide="next">
            <span class="fa fa-chevron-circle-right fa-2x"></span>
        </a>

        <!-- Wrapper for slides -->
        <div class="carousel-inner carousel-fade">

            <!-- item 1 -->
            <div class="item active">
                <img src="~/images/slider1.jpg" alt="slider 1">
                <div class="carousel-caption animated fadeInLeft delay1">
                    <h1>SHIRAZ</h1>
                    <span class="border"></span>
                    <h2>Eram Garden </h2>
                </div>
            </div>

            <!-- item 2 -->
            <div class="item">
                <img src="~/images/slider2.jpg" alt="slider 2">
                <div class="carousel-caption animated  lightSpeedIn delay1">
                    <h1>YAZD</h1>
                    <span class="border"></span>
                    <h2>
                        City of Wind Towers
                    </h2>
                </div>
            </div>

            <!-- item 3 -->
            <div class="item">
                <img src="~/images/slider3.jpg" alt="slider 3">
                <div class="carousel-caption animated fadeInDown delay1">
                    <h1 style="color:#fff">ISFAHAN</h1>
                    <span class="border"></span>
                    <h2 style="color:#fff">Abbasi Hotel</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end slider -->

    <div id="searchbar" class="well">
        <div class="form-horizontal">
            <div class="form-group" >
                <div class="col-sm-9 col-sm-offset-1 nopadding_right">
                    @Html.TextBoxFor(model => model.Destination_Name, new { @class = "form-control", @placeholder = "Find Hotel, City or Destination...", id = "txt_dest_name" })
                </div>
                <div class="col-sm-2 nopadding_left">
                    <button type="submit" class="btn btn_search"><i class="glyphicon glyphicon-search"></i>&nbsp;Search</button>
                </div>
            </div>
        </div>
    </div>

       <div class="col-sm-3 nopadding">
           <div class="well advanced_search">
                   <i class="glyphicon glyphicon-search"></i>
                   @Html.LabelFor(model => model.Hotel_Name)
                   @Html.TextBoxFor(model => model.Hotel_Name, new { @placeholder = "Hotel Name", @class = "form-control" })
               
               <div class="divider_search"></div>

               <div class="checkbox checkbox-info">
                   @Html.HiddenFor(model => model.Star5, new { id = "hd_star5" })
                   <input type="checkbox" id="checkbox_star5">
                   <label for="checkbox_star5">
                       <i class="fa fa-star fa-lg"></i><i class="fa fa-star fa-lg"></i><i class="fa fa-star fa-lg"></i><i class="fa fa-star fa-lg"></i><i class="fa fa-star fa-lg"></i>
                   </label>
               </div>
               
               <div class="checkbox checkbox-info">
                   @Html.HiddenFor(model => model.Star4, new { id = "hd_star4" })
                   <input type="checkbox" id="checkbox_star4">
                   <label for="checkbox_star4">
                       <i class="fa fa-star fa-lg"></i><i class="fa fa-star fa-lg"></i><i class="fa fa-star fa-lg"></i><i class="fa fa-star fa-lg"></i>
                   </label>
               </div>


               <div class="checkbox checkbox-info">
                   @Html.HiddenFor(model => model.Star3, new { id = "hd_star3" })
                   <input type="checkbox" id="checkbox_star3">
                   <label for="checkbox_star3">
                       <i class="fa fa-star fa-lg"></i><i class="fa fa-star fa-lg"></i><i class="fa fa-star fa-lg"></i>
                   </label>
               </div>
               <div class="checkbox checkbox-info">
                   @Html.HiddenFor(model => model.Star2, new { id = "hd_star2" })
                   <input type="checkbox" id="checkbox_star2">
                   <label for="checkbox_star2">
                       <i class="fa fa-star fa-lg"></i><i class="fa fa-star fa-lg"></i>
                   </label>
               </div>

               <div class="checkbox checkbox-info">
                   @Html.HiddenFor(model => model.Star1, new { id = "hd_star1" })
                   <input type="checkbox" id="checkbox_star1">
                   <label for="checkbox_star1">
                       <i class="fa fa-star fa-lg"></i>
                   </label>
               </div>

               <div class="divider_search"></div>

               @Html.LabelFor(model => model.Guest_Rating)
               @Html.TextBoxFor(model => model.Guest_Rating, new {  id = "slider_guest_review" })

               <div class="divider_search"></div>
               @Html.LabelFor(model => model.Location)
               @Html.TextBoxFor(model => model.Location, new { id = "slider_guest_review" })





             
        </div>
        </div>

        <div class="col-sm-6">

        </div>

       

<div class="col-sm-3 nopadding" >
    <ul class="city_sidebar">
        @foreach (var item in Model.lst_city)
        {
            <li><a href="#">@item.cityName</a></li>
        }
       
    </ul>
</div>
}



