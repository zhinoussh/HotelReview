
@model HotelAdvice.Areas.WebSite.ViewModels.DeleteReviewViewModel

@{
    Layout = null;
}


@using (Ajax.BeginForm("DeleteReview", "User", new AjaxOptions
                            {
                                HttpMethod = "Post",
                                InsertionMode = InsertionMode.ReplaceWith,
                                UpdateTargetId = "tab_content_review",
                                OnSuccess = "Success_DeleteReview"
                            }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.hotelId)
    @Html.HiddenFor(model=>model.currentPageIndex)

    <div class="modal fade modal_main" tabindex="-1" role="dialog" aria-labelledby="delete" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header modal-header-danger">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">
                        <span class="glyphicon glyphicon-trash"></span> Delete Review
                    </h4>
                </div>
                <div class="modal-body">
                    
                    Are you sure to delete your review for @Html.DisplayFor(model => model.HotelName)?
                </div>
                <div class="modal-footer ">
                    <button type="submit" class="btn btn-default">Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>

                </div>

            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
}
