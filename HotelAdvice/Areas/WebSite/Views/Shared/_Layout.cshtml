<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Iran Hotel Advisor</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/StarRating")


</head>
<body>

    <!-- Modal -->
    <div class="modal fade" id="modal_login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document" style="width:400px">
            <div class="modal-content" id="modal_container">

            </div>
         </div>
    </div>
     <!-- END MODAL-->

    <div class="navbar navbar-inverse navbar-fixed-top" id="header" >
        <div class="container-fluid">
            <div class="navbar-header" >
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="http://www.iranhoteladvisor.com">
                    <img alt="Brand" src="~/Images/logo1.png">
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.Partial("_LoginPartial")</li>
                </ul>
               
            </div><!-- /.navbar-collapse -->
             
        
           </div><!-- /.container -->
    </div>

    <!-- Alert User Action -->
    <div class="col-sm-3 hidden-xs pull-right" >
        <div class="alert alert-success alert-white rounded" id="div_alert" role="alert" style="display:none">
            <button type="button" id="close_alert" aria-hidden="true" class="close">×</button>
            <div class="icon">
                <i class="fa fa-check" id="icon_alert"></i>
            </div>
            <label id="alert_user_action"></label>
        </div>
    </div>
    <!-- /Alert User Action -->
    <input type="hidden" value="@ViewBag.ReturnUrl" id="hd_return_url" name="hd_return_url" />

    <div class="container-fluid body-content" >
            <div class="col-xs-12">
                @RenderBody()
            </div>
    </div>

    @*<footer class="col-sm-12">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>*@

    @Scripts.Render("~/bundles/jquery")
     @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
     @Scripts.Render("~/bundles/bootstrap")
     @Scripts.Render("~/bundles/WebSite")
    @Scripts.Render("~/bundles/StarRating")


    @RenderSection("scripts", required: false)
</body>
</html>


