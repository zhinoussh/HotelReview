
@{
    Layout = null;
    }


<div class="col-sm-3 col-xs-4 nopadding">
    <div class="well well-sort-title"><i class="fa fa-sort fa-lg hidden-xs"></i> Sort Hotels</div>
</div>

<div class="col-sm-9 col-xs-8 nopadding">
    <div class="well well-sortResult" >

        <div class="col-sm-4 col-xs-12 " >
            @Ajax.SortLink("Distance", "HotelResults", "SearchHotel", "distance"
            , "btn btn-sort btn-responsive btn-block", "Hotels located closest to Downtown")
        </div>
        <div class="col-sm-4 col-xs-12 ">
            @Ajax.SortLink("Guest Rating", "HotelResults", "SearchHotel", "rating"
            , "btn btn-sort btn-responsive btn-block", "Popular hotels based on guest rating")
        </div>

        <div class="col-sm-4 col-xs-12">
            @Html.BootstrapButton("Stars", "btn-sort btn-responsive dropdown-toggle btn-block", ""
           , new {  data_toggle="dropdown"})

            <ul class="dropdown-menu dropdown-menu-sort" role="menu">
                <li>
                    @Ajax.SortLink("5 to 1 Stars", "HotelResults", "SearchHotel", "5to1")
                </li>
                <li>
                    @Ajax.SortLink("1 to 5 Stars", "HotelResults", "SearchHotel", "1to5")
                </li>
            </ul>
        </div>
    </div>
</div>
