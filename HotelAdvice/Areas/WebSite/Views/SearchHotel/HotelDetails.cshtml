@using HotelAdvice.Areas.WebSite.ViewModels
@model HotelDetailViewModel
@{
    ViewBag.Title = "HotelDetails";
    Layout = "~/Areas/WebSite/Views/Shared/_Layout.cshtml";
}


<div id="detail_container">
    <div class="col-xs-12 top-buffer20 nopadding">
        <div class="col-sm-8 col-xs-6 nopadding">
            <h4 style="font-weight:bold; margin:0">
                @Html.DisplayFor(model => model.HotelName) Hotel - @Html.DisplayFor(model => model.CityName)
            </h4>

        </div>
        <div class="col-sm-2 col-xs-3 text-right">
            Rate by Guests
        </div>
        <div class="col-sm-2 col-xs-3 nopadding" >
            @Html.TextBoxFor(model => model.GuestRating, new { @class = "GuestRating" })

        </div>
    </div>
    <div class="col-xs-12 nopadding">
        <div class="col-xs-9 nopadding">
            @Html.TextBoxFor(model => model.HotelStars, new { @class = "HotelStars" })
        </div>
        <div class="col-xs-3  nopadding">
            @Html.ActionLink(Model.review_num + " reviews", "Reviews", "User"
            , new { Area = "WebSite", id = Model.HotelId }, new { target = "_blank" })
        </div>
    </div>


    @{Html.RenderPartial("_PartialHotelDetailPhoto", Model.photos);}


    <div class="col-xs-12 top-buffer10 nopadding">

        <!-- Accordion Hotel Details-->
        <div class="col-sm-9 col-xs-7  nopadding">
            <div class="panel-group" id="accordion">

                <!-- Panel General-->
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h4 class="panel-title ">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseGeneral">
                                <i class="glyphicon glyphicon-info-sign"></i> General Description <i class="indicator glyphicon glyphicon-chevron-down  pull-right"></i>
                            </a>
                        </h4>
                    </div>
                    <div id="collapseGeneral" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <div class="col-xs-12 nopadding">
                                <div class="col-sm-3 col-xs-12 nopadding">
                                    <b>Reception hours: 24 hours</b>
                                </div>
                                <div class="col-sm-3 col-xs-12 nopadding">
                                    <i class="glyphicon glyphicon-time"></i> Check-in Time: @Html.DisplayFor(model => model.checkin)
                                </div>

                                <div class="col-sm-3 col-xs-12 nopadding">
                                    <i class="glyphicon glyphicon-time"></i> Check-out Time:
                                    @Html.DisplayFor(model => model.checkout)
                                </div>
                            </div>
                            <div class="col-xs-12 nopadding top-buffer10">
                                @Html.DisplayFor(model => model.Description)
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Panel Contact-->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseContact">
                                <i class="glyphicon glyphicon-phone"></i> Contact Information <i class="indicator glyphicon glyphicon-chevron-up  pull-right"></i>
                            </a>
                        </h4>
                    </div>
                    <div id="collapseContact" class="panel-collapse collapse">
                        <div class="panel-body">
                            <div class="col-xs-12 nopadding">
                                <div class="col-sm-6 col-xs-12 nopadding">
                                    <i class="glyphicon glyphicon-phone-alt"></i> Phone Number: @Html.DisplayFor(model => model.Tel)
                                </div>

                                <div class="col-sm-6 col-xs-12 nopadding">
                                    <i class="glyphicon glyphicon-earphone"></i> Fax Number:
                                    @Html.DisplayFor(model => model.Fax)
                                </div>
                                <div class="col-sm-6 col-xs-12 nopadding">
                                    <i class="glyphicon glyphicon-envelope"></i> Email:
                                    @Html.DisplayFor(model => model.Email)
                                </div>
                                <div class="col-sm-6 col-xs-12 nopadding">
                                    <i class="glyphicon glyphicon-globe"></i> Web Site:
                                    <a href="http://@Model.Website" ta target="_blank"> @Model.Website</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <!-- Panel Location-->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseLocation">
                                <i class="glyphicon glyphicon-map-marker"></i> Location and Distances <i class="indicator glyphicon glyphicon-chevron-up  pull-right"></i>
                            </a>
                        </h4>
                    </div>
                    <div id="collapseLocation" class="panel-collapse collapse">
                        <div class="panel-body">
                            <div class="col-xs-12 nopadding">
                                Address: @Html.DisplayFor(model => model.HotelAddress)
                            </div>
                            <div class="col-xs-12 nopadding top-buffer10">

                                <div class="col-sm-6 col-xs-12 nopadding">
                                    <i class="glyphicon glyphicon-map-marker"></i> Distance from City Center:
                                    @Html.DisplayFor(model => model.distance_citycenter) km
                                </div>

                                <div class="col-sm-6 col-xs-12 nopadding">
                                    <i class="glyphicon glyphicon-plane"></i> Distance from Airport:
                                    @Html.DisplayFor(model => model.distance_airport) km
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Panel Rooms-->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseRoom">
                                <i class="glyphicon glyphicon-bed"></i> Room Types <i class="indicator glyphicon glyphicon-chevron-up pull-right"></i>
                            </a>
                        </h4>
                    </div>
                    <div id="collapseRoom" class="panel-collapse collapse">
                        <div class="panel-body">
                            <div class="col-xs-12 nopadding ">

                                @if (Model.rooms != null)
                                {
                                    foreach (var item in Model.rooms)
                                    {
                                        <div class="col-sm-3 col-xs-6 nopadding top-buffer10">
                                            <i class="fa fa-check-square-o"></i>  @item
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-xs-12 nopadding">
                                        Not Specified.
                                    </div>
                                }
                            </div>
                        </div>


                    </div>
                </div>

                <!-- Panel Restaurant-->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseRestaurant">
                                <i class="glyphicon glyphicon-cutlery"></i> Restaurants <i class="indicator glyphicon glyphicon-chevron-up pull-right"></i>
                            </a>
                        </h4>
                    </div>
                    <div id="collapseRestaurant" class="panel-collapse collapse">
                        <div class="panel-body">
                            <div class="col-xs-12 nopadding ">
                                @if (Model.restaurants != null)
                                {
                                    foreach (var item in Model.restaurants)
                                    {
                                        <div class="col-sm-4 col-xs-12 nopadding top-buffer10">
                                            <i class="fa fa-check-square-o"></i>  @item
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-xs-12 nopadding">
                                        Not Specified.
                                    </div>
                                }
                            </div>
                        </div>


                    </div>
                </div>

                <!-- Panel SightSeeing-->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseSightseeing">
                                <i class="glyphicon glyphicon-tree-deciduous"></i> Nearby Sightseeing<i class="indicator glyphicon glyphicon-chevron-up pull-right"></i>
                            </a>
                        </h4>
                    </div>
                    <div id="collapseSightseeing" class="panel-collapse collapse">
                        <div class="panel-body">
                            <div class="col-xs-12 nopadding ">
                                @if (Model.sightseeing != null)
                                {
                                    foreach (var item in Model.sightseeing)
                                    {
                                        <div class="col-sm-4 col-xs-12 nopadding top-buffer10">
                                            <i class="fa fa-check-square-o"></i>  @item
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-xs-12 nopadding">
                                        Not Specified.
                                    </div>
                                }
                            </div>
                        </div>


                    </div>
                </div>

                <!-- Panel Amenity-->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseAmenity">
                                <i class="glyphicon glyphicon-lamp"></i> Hotel Amenities<i class="indicator glyphicon glyphicon-chevron-up pull-right"></i>
                            </a>
                        </h4>
                    </div>
                    <div id="collapseAmenity" class="panel-collapse collapse">
                        <div class="panel-body">
                            <div class="col-xs-12 nopadding ">
                                @if (Model.amenities != null)
                                {
                                    foreach (var item in Model.amenities)
                                    {

                                        <div class="col-sm-3 col-xs-6 nopadding top-buffer10">
                                            @if (item.hotel_selected)
                                            {
                                                <i class="fa fa-check-square-o"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-ban"></i>
                                            }
                                            @item.AmenityName
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-xs-12 nopadding">
                                        Not Specified.
                                    </div>
                                }
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>

        <!-- User Actions-->
        <div class="col-sm-3 col-xs-5 nopadding_right ">
            <div class="col-xs-10 col-xs-offset-1 nopadding text-center">

                <div class="col-xs-12 ">add this hotel to your wish list</div>

                <div class="col-xs-12 nopadding top-buffer10">

                    @using (Ajax.BeginForm("AddToFavorite_Detail", "User", new { hotel_id = Model.HotelId }
                           , new AjaxOptions
                            {
                                HttpMethod = "Post",
                                OnSuccess = "SuccessAjax_AddFavorit"
                            }))
                    {
                        @Html.AntiForgeryToken()

                        <button class="btn btn-danger btn-responsive btn-block @(!(Model.is_favorite)?"btn-outline":"") "
                                type="submit" title='@(Model.is_favorite ? "Remove from your wish list" : "Add to your wish list")'>
                            <i class="fa fa-heart fa-lg"></i> Like it!
                        </button>
                    }
                </div>


                <div class="col-xs-12 text-center top-buffer10 nopadding">
                    <div class="col-xs-12 box-warning">
                       <b>Quick Rating!</b><br />
                       <div class="col-xs-12 nopadding">
                            @using (Ajax.BeginForm("RateHotel","User", new AjaxOptions
                            {
                                HttpMethod = "Post",
                                OnSuccess = "SuccessAjax_AddRating"
                            }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="col-xs-12 nopadding">
                                    @Html.HiddenFor(model => model.HotelId, new { id = "hotel_id", Name = "hotel_id" })
                                    @Html.TextBoxFor(model => model.YourRating, new { @class = "YourRating", id = "your_rating", Name = "your_rating" })
                                </div>   <div class="col-xs-12 nopadding top-buffer10">
                                    <button class=" btn btn-warning btn-responsive btn-block " type="submit">
                                        Send it!
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 text-center top-buffer10 nopadding">
                    <div class="col-xs-12 box-primary">
                        Read all reviews<br />
                        @Html.ActionLink(Model.review_num + " reviews", "Reviews", "User"
                            , new { Area = "WebSite", id = Model.HotelId }, new { target = "_blank" })


                        <a role="button" class="btn btn-primary btn-responsive btn-block top-buffer20 "
                           href="@Url.Action("Reviews", "User", new { id = Model.HotelId, Area = "WebSite" })">
                            Review <i class="glyphicon glyphicon-pencil"></i>
                        </a>
                    </div>


                </div>


            </div>

        </div>
    </div>
</div>