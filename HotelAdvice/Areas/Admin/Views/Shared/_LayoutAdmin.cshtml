<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - @ViewBag.Title</title>
    @Styles.Render("~/Content/AdminCss")
    @Styles.Render("~/Content/StarRating")

</head>
<body>
       
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul id="sidebar_menu" class="sidebar-nav">
                <li class="sidebar-brand" ><a id="menu-toggle" href="#">Dashboard
                 <span id="main_icon" class="glyphicon glyphicon-chevron-left"></span></a></li>
            </ul>
            <ul class="sidebar-nav" id="sidebar">
                <li>
                    <a href="@Url.Action("Index","City", new { Area = "Admin" })">City Management<span class="sub_icon glyphicon glyphicon-map-marker"></span></a>
                </li>
            </ul>
          
            <ul class="sidebar-nav" id="sidebar">
                <li style="text-indent:10px;">
                    <a data-toggle="collapse" data-target="#hotel">
                        <i class="glyphicon glyphicon-chevron-down"></i>
                        Hotel Management
                        <span class="sub_icon glyphicon glyphicon glyphicon-home"></span>
                    </a>
                </li>
                <ul class="sub-menu collapse" id="hotel" style="padding:0;list-style:none">
                    <li><a href="@Url.Action("Index","Hotel", new { Area = "Admin" })">Hotels</a></li>
                    <li><a href="@Url.Action("Index","Amenity", new { Area = "Admin" })">Hotel Amenities</a></li>
                </ul>
            </ul>
            <ul class="sidebar-nav" id="sidebar">

                <li><a href="/Account/LogOff">Sign Out<span class="sub_icon glyphicon glyphicon-log-out"></span></a></li>
            </ul>
   
</div>

        <!-- Page content -->
        <div id="page-content-wrapper">
            <!-- Keep all page content within the page-content inset div! -->
            <div class="page-content inset">
                <div class="row">
                    <div class="col-md-12">
                      @RenderBody()
                    </div>
                </div>
            </div>
        </div>

    </div>
          

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/AdminPage")    
         @Scripts.Render("~/bundles/StarRating")

   
        @RenderSection("scripts", required: false)
</body>


</html>