@using PagedList
@model IPagedList<HotelAdvice.Areas.Admin.ViewModels.CityViewModel>
    @{
        ViewBag.Title = "City Management";
        Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    }



    <h2 class="col-xs-12">City List</h2>


    <div class="col-xs-12">
        <div class="alert alert-success" role="alert" id="div_alert" style="display:none;">
            <a href="#" id="close_alert" class="close">&times;</a>
            <label id="alert_success" style="margin-right:5px"></label>
        </div>
    </div>

    @using (Ajax.BeginForm("Index", new AjaxOptions
    {
        HttpMethod = "GET",
        UpdateTargetId = "table_container",
        InsertionMode = InsertionMode.Replace
    }))
    {

        <div class="col-sm-5 col-xs-7">
            <div class="input-group">
                @Html.BootstrapTextBox("filter", (string)ViewBag.filter, "Search Cities...", "Search Cities")

                <span class="input-group-btn">
                    @Html.BootstrapButton("<span class='glyphicon glyphicon-search'></span> Search", "btn-primary btn-responsive"
                    , "", HtmlCommon.ButtonType.submit)
                </span>
            </div>
        </div>
    }
    <div class="col-xs-2 col-sm-offset-5 col-xs-offset-1 text-right">
        @Html.BootstrapButton("<span class='glyphicon glyphicon-plus'></span> Add New", "btn-success "
                            , "btn_add_new", HtmlCommon.ButtonType.button, new { data_url = "/Admin/City/ADD_New_City" })
    </div>
    <div id="table_container" class="col-xs-12 top-buffer20">

        @Html.Partial("_PartialCityList", Model)
    </div>

    <div id="MyModal"></div>


